<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateuszbona.tictactoe">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="pl.mateuszbona.tictactoe.user.activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="pl.mateuszbona.tictactoe.user.activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.mateuszbona.tictactoe.gamelist.GameListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.mateuszbona.tictactoe.gamelist.CreateGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="pl.mateuszbona.tictactoe.game.activity.GameActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>